{
  "name": "bun-react-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "setup": "bun src/database/setup.ts",
    "dev": "bun --hot src/index.tsx",
    "start": "NODE_ENV=production bun src/index.tsx",
    "build": "bun run build.ts",
    "db:migrate": "bun src/database/db.ts",
    "migrate" : "bun /src/database/migrate.ts",
    "deploy": "git pull && bun install && bun run build && pm2 restart deepak-portfolio || pm2 start bun --name deepak-portfolio -- run start"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "bun-plugin-tailwind": "^0.0.15",
    "react": "^19",
    "react-dom": "^19",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/bun": "latest"
  }
}
